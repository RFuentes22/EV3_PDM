<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#F7F1F1"
              android:layout_marginTop="10dp"
              android:orientation="vertical"
              android:padding="24dp">
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/medium_gap"
            android:layout_marginTop="@dimen/medium_gap"
            android:layout_marginRight="@dimen/medium_gap"
            android:background="#D8D4D4"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bolditalic"
                android:text="Desc"
                android:textColor="#FF9800"
                android:textSize="24dp"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:fontFamily="@font/roboto_bolditalic"
                android:text="ription"
                android:textColor="#000000"
                android:textSize="24dp"

        />


    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="text discription food menu"
            android:ellipsize="end"
            android:lines="3"
            android:id="@+id/tv_movie_synopsis"
            android:textColor="#0C0C0C"
            android:textSize="14dp">

    </TextView>

    <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Food Menu"

                            android:id="@+id/tv_movie_title"
                            android:textColor="#fdb501"
                            android:textSize="24dp" />

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="20dp"
                                    android:id="@+id/tv_rating_rv"
                                    android:textColor="#6A90B5"
                                    android:fontFamily="@font/roboto_bold"
                                    android:layout_height="wrap_content"
                                    android:text="20" />

                            <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#DF6A90B5"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_height="wrap_content"
                                    android:text="Rate" />
                        </LinearLayout>

                        <ImageView
                                android:layout_marginLeft="16dp"
                                android:layout_width="wrap_content"
                                android:src="@drawable/split"
                                android:layout_height="match_parent" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="16dp"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/tv_movie_runtime"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="20dp"
                                    android:textColor="#6A90B5"
                                    android:fontFamily="@font/roboto_bold"
                                    android:layout_height="wrap_content"
                                    android:text="15" />

                            <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#EE6A90B5"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_height="wrap_content"
                                    android:text="Run-time" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="-8dp"
                            android:src="@drawable/ic_launcher_background"
                            android:id="@+id/iv_movie_logo"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:text="Like"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#F06A90B5"
                            android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:text="Comment"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#F06A90B5"
                            android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:text="Share"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="#F06A90B5"
                            android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/medium_gap"
            android:layout_marginTop="@dimen/medium_gap"
            android:layout_marginRight="@dimen/medium_gap"
            android:background="#D8D4D4"/>
</LinearLayout>